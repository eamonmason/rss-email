# Example .env file for testing Claude improvements
# Copy this to .env and add your actual API key

# Required: Your Anthropic API key
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: Claude model to use (defaults to claude-3-5-haiku-20241022)
CLAUDE_MODEL=claude-3-5-haiku-20241022

# Optional: Maximum tokens for Claude responses (defaults to model-specific limits)
CLAUDE_MAX_TOKENS=100000

# Optional: Maximum requests per session (defaults to 5)
CLAUDE_MAX_REQUESTS=5

# Optional: API timeout in seconds (defaults to 120)
CLAUDE_API_TIMEOUT=120

# Optional: Enable/disable Claude processing (defaults to true)
CLAUDE_ENABLED=true